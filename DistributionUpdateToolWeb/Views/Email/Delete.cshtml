@model DistributionUpdateToolWeb.ViewModels.ClientSingleViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-danger" role="alert">
    <h3>Are you sure you want to delete?</h3>
</div>

<h2>Delete @Model.EmailAddress.CustomerName</h2>

<ul>
    <li>Email Address: @Model.EmailAddress.Email</li>
    <li>Client Group: @Model.Client.Name</li>
</ul>

<a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary">Back to Details</a>

@Html.ActionLink("Delete", "Delete", new { emailId = Model.EmailAddress.Id, clientId = Model.Client.Id }, new { @class = "btn btn-danger" })



