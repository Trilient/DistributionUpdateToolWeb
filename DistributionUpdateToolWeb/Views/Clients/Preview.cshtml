@model DistributionUpdateToolWeb.ViewModels.ClientViewModel
@{
    ViewBag.Title = "Preview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Preview New Client</h2>

@Html.ActionLink("<- Return to Index", "Index");

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Client Name</th>
            <th scope="col">Distribution</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Client.Name</td>
            <td>
                @foreach (var email in Model.EmailAddresses)
                {
                    <text>@email.Email;</text>
                }
            </td>
        </tr>
    </tbody>
</table>

<div>
    <a href="@Request.UrlReferrer" class="btn btn-primary" title="Go Back">Go Back</a>
</div>



